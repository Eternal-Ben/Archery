
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title Archery </title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <header class="page-header">
        <h1> Archery </h1>
    </header>

    @*<!-barre de navigation BS Layout-->*@
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                @*lien du lien souhaité maniere 1 avec un href *@
                @*<a class="navbar-brand" href="#">Home</a>*@

                @*lien du lien souhaité maniere 2 avec un Html Helper *@
                @*Pour la notation du code d'utilisation de class css dans le c# il faut toujours utiliser un "@"*@
                @*@Html.ActionLink("Accueil", "index", "home", null, new { @class = "navbar-brand" })*@

                @*lien du lien souhaité maniere 3 avec un Url Helper*@
                <a class="navbar-brand" href="@Url.Action("index", "home")"> Home </a>


            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li>
                        @*mode 1 href*@
                        @*<a href="~/a-propos"> A propos </a>*@

                        @*mode 2 avec HtmlLink*@
                        @*@Html.ActionLink("A propos", "about", "home")*@

                        @*mode 3 avec UrlLink*@
                        <a href="@Url.RouteUrl("AboutRoute")"> A propos </a>
                    </li>

                </ul>
                <form class="navbar-form navbar-left">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Search">
                    </div>
                    <button type="submit" class="btn btn-default"> Submit </button>
                </form>
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a href="@Url.Action("subscribe", "archers")"> Inscription </a>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Dropdown <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="@Url.RouteUrl("AboutRoute")"> A propos </a></li>
                            <li><a href="#">Another action</a></li>
                            <li><a href="#">Something else here</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a href="#">Separated link</a></li>
                        </ul>
                    </li>
                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>



    @*<!-container du RenderBody-->*@
    <div class="container">

        @*// Affichage du PartialDisplay*@
        @Html.Partial("_PartialDisplay")

        @*//methode 2*@
        @*@{Html.RenderPartial("_PartialDisplay");}*@

        @RenderBody()

    </div>

    <footer class="panel-footer">
        &copy; 2018

    </footer>


    <script src="~/Scripts/jquery-1.9.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @RenderSection("SectionScripts", false) @*// Execution de code dans une section : Une section peut charger autre chose que le JS*@

</body>
</html>
